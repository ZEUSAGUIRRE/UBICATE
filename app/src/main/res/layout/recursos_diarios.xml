<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical"
        android:background="@color/colorPrimary"
        android:alpha="0.8">

        <TextView
            style="@style/Label"
            android:text="@string/Descripcion_Actividad"
            android:alpha="1"
            android:textColor="@color/color_Blanco" />

        <EditText
            android:alpha="1"
            style="@style/Cajas_Texto"
            android:hint="@string/Actividad_string"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/bordes_estilo"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/Btn_1"
                style="@style/Boton"
                android:background="@drawable/insumo"
                android:layout_weight="1"
                android:layout_margin="5dp"/>
            <ImageButton
                android:id="@+id/Btn_2"
                style="@style/Boton"
                android:background="@drawable/mano_obra"
                android:layout_weight="1"
                android:layout_margin="5dp"/>
            <ImageButton
                android:id="@+id/Btn_3"
                style="@style/Boton"
                android:background="@drawable/maquinaria"
                android:layout_weight="1"
                android:layout_margin="5dp"/>
            <ImageButton
                android:id="@+id/Btn_4"
                style="@style/Boton"
                android:background="@drawable/gastos"
                android:layout_weight="1"
                android:layout_margin="5dp"/>

        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_negro"
        android:layout_weight="1"
        android:alpha="0.7">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/Contenedor_gastos_diarios">

     </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bordes_botones">
        <Button
            android:id="@+id/btn_Atras_Diarios"
            android:text="@string/AtrÃ¡s"
            style="@style/Boton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_negro"
            android:background="@drawable/bordes_estilo"/>
    </LinearLayout>

</LinearLayout>