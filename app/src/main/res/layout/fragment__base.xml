<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context="com.example.tecnoparque4.prototipo.Fragmentos.Fragment_Base">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/color_negro"
        android:padding="20dp"
        android:alpha="0.8">

        <LinearLayout
            android:id="@+id/Nombre_finca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bordes_botones"
            android:layout_weight="0.1"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:alpha="0.8">

            <TextView
                android:id="@+id/txt_nombre_finca"
                style="@style/Label"
                android:text="....."
                android:textColor="@color/color_Blanco"
                android:layout_width="wrap_content"
                android:gravity="center" />
        </LinearLayout>

       <LinearLayout
           android:id="@+id/Layout_lotes"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@drawable/bordes_estilo"
           android:layout_weight="1"
           android:orientation="horizontal"
           android:gravity="center"
           android:layout_marginBottom="10dp"
           android:alpha="0.8">

           <ImageView
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:src="@drawable/lotes"
               android:layout_weight="1" />

           <TextView
               style="@style/Label"
               android:text="@string/Lotes"
               android:layout_width="wrap_content"
               android:gravity="center"
               android:layout_weight="1" />
       </LinearLayout>

    <LinearLayout
        android:id="@+id/Layout_insumos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bordes_estilo"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:alpha="0.8">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/insumos"
            android:layout_weight="1" />

        <TextView
            style="@style/Label"
            android:text="@string/Insumos"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Layout_Inventario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bordes_estilo"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:alpha="0.8">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/bodega"
            android:layout_weight="1" />

        <TextView
            style="@style/Label"
            android:text="@string/Inventario"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_weight="1" />
    </LinearLayout>

    </LinearLayout>

</LinearLayout>
