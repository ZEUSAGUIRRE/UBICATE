<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/layout_dialogo"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="10dp"
        android:background="@color/colorPrimary">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/imageView2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/Btn_finca"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginLeft="45dp"
            android:layout_marginStart="45dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageView2"
            android:layout_toEndOf="@+id/imageView2" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@color/color_negro">

        <TextView
            style="@style/Label"
            android:id="@+id/text"
            android:text="@string/Btn_finca"
            android:textColor="@color/color_Blanco"/>

        <EditText
            android:id="@+id/txt_finca"
            style="@style/Cajas_Texto"
            android:inputType="textPersonName"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/Btn_guardar_finca"
                style="@style/Boton"
                android:layout_margin="5dp"
                android:text="@string/Guardar"
                android:layout_weight="1" />
            <!--Button
                android:id="@+id/Btn_cancelar_finca"
                style="@style/Boton"
                android:layout_margin="5dp"
                android:text="@string/Cancelar"
                android:layout_weight="1" /-->
        </LinearLayout>
    </LinearLayout>
</LinearLayout>