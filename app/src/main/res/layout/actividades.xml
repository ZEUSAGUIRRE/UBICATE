<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context="com.example.tecnoparque4.prototipo.Fragmentos.Actividades">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="10dp"
        android:orientation="horizontal"
        android:background="@color/colorPrimary"
        android:alpha="0.7">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:src="@drawable/actividades"
            android:id="@+id/imageView2"
            android:alpha="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/Actividades_Diarias"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginLeft="45dp"
            android:layout_marginStart="45dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageView2"
            android:layout_toEndOf="@+id/imageView2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_negro"
        android:alpha="0.7"
        android:padding="15dp"
        android:orientation="vertical">

            <TextView
                style="@style/Label"
                android:text="@string/Buscar"
                android:textColor="@color/color_Blanco"/>

            <EditText
                style="@style/Cajas_Texto"
                android:hint="@string/Nombre"/>

        <ImageButton
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            style="@style/Boton"
            android:background="@drawable/buscar"
            android:padding="0dp"
            android:layout_gravity="right"
            android:layout_width="30dp"
            android:layout_height="30dp" />

         <Spinner
            style="@style/Spinner"
            android:entries="@array/Fincas"
            android:background="@color/color_Blanco"
            android:alpha="1">
         </Spinner>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_marginTop="20dp"
             android:orientation="horizontal"
             android:layout_height="wrap_content">
          <Button
              style="@style/Boton"
              android:layout_margin="5dp"
              android:id="@+id/Btn_Aceptar"
             android:layout_weight="1"
             android:text="@string/Aceptar"/>
           <Button
             android:layout_margin="5dp"
             android:id="@+id/Btn_Atras_Actividad"
             style="@style/Boton"
             android:layout_weight="1"
             android:text="@string/AtrÃ¡s"/>
        </LinearLayout>

</LinearLayout>
</LinearLayout>
