<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/background"
    android:id="@+id/Ventana_login"
    tools:context="com.example.tecnoparque4.prototipo.Activity_Login">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/Imagen_logo"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_negro"
            android:alpha="0.8"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lbl_usuario"
                android:text="@string/Usuario"
                android:textColor="@color/color_Blanco"
                android:gravity="left"
                style="@style/Label"
                android:layout_below="@+id/Imagen_logo"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:id="@+id/txt_usuario"
                style="@style/Cajas_Texto"
                android:inputType="textAutoCorrect"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:id="@+id/textView"
                android:text="@string/Contraseña"
                android:textColor="@color/color_Blanco"
                android:gravity="left"
                style="@style/Label"
                android:layout_below="@+id/Imagen_logo"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:id="@+id/txt_password"
                style="@style/Cajas_Texto"
                android:inputType="textPassword"
                android:layout_marginBottom="20dp"/>

            <Button
                android:id="@+id/Btn_Entrar_login"
                style="@style/Boton"
                android:text="@string/Ingresar"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/Btn_Registrar"
                style="@style/Boton"
                android:text="@string/Registrar"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkBox"
                    style="@style/Label"
                    android:background="@color/color_Gris" />

                <TextView
                    style="@style/Label"
                    android:textColor="@color/color_Blanco"
                    android:text="@string/Guardar_Contraseña"
                    android:textSize="15sp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
</LinearLayout>
